    String  type        Tipo de alert
    String  mensaje     Mensaje

******** Basado en Boostrap 3.0 ********
******** CSS ********

.mensajes > div{
    display: none;
    opacity: 0;
}
#mensajes{
    position: absolute;
    right: 20px;
    opacity: 0;
    top: 0px;
    max-height: 60%;
    overflow: auto;
}
#mensajes .alert{
    opacity: 0;
    max-height: 52px;
}
#mensajes.in{
    display: block;
    top: 70px;
    opacity: 1;
    -webkit-transition-delay: 500ms;
    -moz-transition-delay: 500ms;
    -ms-transition-delay: 500ms;
    -o-transition-delay: 500ms;
    transition-delay: 500ms;
}
#mensajes .alert.in{
    opacity: 1;
    -webkit-transition-delay: 500ms;
    -moz-transition-delay: 500ms;
    -ms-transition-delay: 500ms;
    -o-transition-delay: 500ms;
    transition-delay: 500ms;
}
#mensajes .alert.out{
    max-height: 0;
    overflow: hidden;
    padding-top: 0;
    padding-bottom: 0;
    border: 0px solid;
}
.navbar-form{
    max-height: 60px;
}

******** JAVASCRIPT ********

$('.mensajes').children().appendTo('#mensajes');
if($('.mensajes').length){
    $('#mensajes')
        .addClass('animate in')
        .children()
            .addClass('animate in')
        .end()
        .find('.close').on('click', function(e){
            e.preventDefault();
            e.stopPropagation();
            $(this).parent()
                .removeClass('in')
                .addClass('out');
            var alert = $(this).parent();
            setTimeout(function(){alert.remove()}, 500);
        }).end().find('a').addClass('alert-link');
}

 #}

<div class="mensajes">
    <div class="alert {{ tipo is defined and tipo is not empty?'alert-' ~ tipo:'' }} alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ mensaje is defined and mensaje is not empty?mensaje | raw:'Sin Mensaje' }}
    </div>
</div>