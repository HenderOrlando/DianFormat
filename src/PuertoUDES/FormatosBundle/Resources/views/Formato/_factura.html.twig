                                valor:    "", 
                            } %}
                        </div>
                        <div>
                            {% include 'PuertoUDESCommonBundle:Plantilla:_xeditable.html.twig' with {
                                id:             "entidad",
                                clase:          "entidad-factura",
                                placement:      "bottom",
                                name:           "telefono",
                                pk:             '',
                                datos:          {},
                                type:           "textarea",
                                originalTitle:  "Empresa",
                                entityName:     "entidad",
                                bundleName:     "common" ,
                                emptyText:      "Teléfono",
                                placeholder:    "Teléfono", 
                                required:       "NoVacio,Numeros",
                                valor:    "", 
                            } %}
                        </div>
                    </div>
                    <div class="col-xs-6 border-left">
                        <div>
                            {% include 'PuertoUDESCommonBundle:Plantilla:_xeditable.html.twig' with {
                                id:             "entidad",
                                clase:          "entidad-factura",
                                placement:      "bottom",
                                name:           "nombre",
                                pk:             '',
                                datos:          {},
                                type:           "textarea",
